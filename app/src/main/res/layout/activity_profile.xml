<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.uihomies.androidfitness.Profile"
    android:padding="0dp">

    <FrameLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:fitsSystemWindows="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.00">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cloudImage"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cloud"
            android:contentDescription="cloudImage" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="PROFILE"
            android:id="@+id/profileTitle"
            android:textColor="#ff000000"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:layout_marginLeft="@dimen/signupSideMargin"
            android:layout_marginRight="@dimen/signupSideMargin">


            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:stretchColumns="*">

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/signupDistanceBetweenCloudAndQuestion"
                        android:textColor="@color/signupText"
                        android:textSize="@dimen/signupQuestions_size"
                        android:text="GENDER:"
                        android:id="@+id/genderLabel"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/signupDistanceBetweenCloudAndQuestion"
                        android:textColor="@color/profileAnswers"
                        android:textSize="@dimen/signupQuestions_size"
                        android:id="@+id/genderAnswer"
                        />
                    </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/signupDistanceBetweenCloudAndQuestion"
                        android:textColor="@color/signupText"
                        android:textSize="@dimen/signupQuestions_size"
                        android:text="DATE OF BIRTH:"
                        android:id="@+id/dobLabel"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/signupDistanceBetweenCloudAndQuestion"
                        android:textColor="@color/profileAnswers"
                        android:textSize="@dimen/signupQuestions_size"
                        android:id="@+id/dobAnswer"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/signupDistanceBetweenCloudAndQuestion"
                        android:textColor="@color/signupText"
                        android:textSize="@dimen/signupQuestions_size"
                        android:text="WEIGHT:"
                        android:id="@+id/weightLabel"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/signupDistanceBetweenCloudAndQuestion"
                        android:textColor="@color/profileAnswers"
                        android:textSize="@dimen/signupQuestions_size"
                        android:id="@+id/weightAnswer"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/signupDistanceBetweenCloudAndQuestion"
                        android:textColor="@color/signupText"
                        android:textSize="@dimen/signupQuestions_size"
                        android:text="HEIGHT:"
                        android:id="@+id/heightLabel"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/signupDistanceBetweenCloudAndQuestion"
                        android:textColor="@color/profileAnswers"
                        android:textSize="@dimen/signupQuestions_size"
                        android:id="@+id/heightAnswer"
                        />
                </TableRow>

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/signupDistanceBetweenCloudAndQuestion"
                        android:textColor="@color/signupText"
                        android:textSize="@dimen/signupQuestions_size"
                        android:text="ATHLETIC LEVEL"
                        android:id="@+id/athleticLevelLabel"
                        />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/signupDistanceBetweenCloudAndQuestion"
                        android:textColor="@color/profileAnswers"
                        android:textSize="@dimen/signupQuestions_size"
                        android:id="@+id/athleticLevelAnswer"
                        />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/signupSideMargin"
            android:layout_marginRight="@dimen/signupSideMargin"
            android:layout_marginBottom="@dimen/signupSideMargin"
            android:gravity="center|bottom"
            android:orientation="vertical" >

            <Button
                android:id="@+id/editProfileButton"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal|center"
                android:background="@color/signupNext"
                android:textSize="@dimen/signupNextTextSize"
                android:textColor="@color/signupText"
                android:text="@string/editProfile"
                android:onClick="editButtonClick"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    </FrameLayout>

</RelativeLayout>
